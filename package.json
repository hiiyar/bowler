{
  "name": "crpro-graphql",
  "version": "1.0.0",
  "main": "dist/main.js",
  "repository": "git@github.com:hiiyar/crpro-graphql.git",
  "author": "Pierre Ortega <pierreandreisortega@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "prebuild": "yarn build:clean && yarn build:copyfiles",
    "build": "tsc",
    "build:copyfiles": "copyfiles --up 1 --all 'src/**/*.graphql' dist",
    "build:watch": "tsc -w",
    "build:clean": "rimraf dist",
    "gcp-build": "tsc -p .",
    "dev": "yarn prebuild & concurrently --raw \"yarn build:watch\" \"sleep 5 && nodemon dist/main\"",
    "start": "node dist/main.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/graphql": "^14.0.4",
    "apollo-server": "^2.3.1",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.8",
    "prettier": "1.15.3",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.2"
  }
}
